{% extends "layout.twig" %}
{% block title %}Update Employee{% endblock %}
{% block placeholder %}
    {% if msg is not null and msg is not empty %}
        {% if(msg['update_message']) %}
            <div class="alert alert-success">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                <strong>Update!</strong> {{  msg['update_message'][0] }}
            </div>
        {% endif %}
    {% endif %}

    <legend>Edit Employee</legend>
    <form action="/insert" method="post" class="well">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label for="exampleInputEmail1">Name</label>
                    <input type="text" name="name" value="{{ update_data.employee_name }}" class="form-control" id=""
                           placeholder="Enter employee name" required>
                </div>

                <div class="form-group">
                    <label for="exampleInputPassword1">Email</label>
                    <input type="email" name="email" value="{{ update_data.email }}" class="form-control" id=""
                           placeholder="Enter email" required>
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Phone</label>
                    <input type="text" name="phone" value="{{ update_data.phone }}" class="form-control" id=""
                           placeholder="Enter phone" required>
                </div>

                <div class="form-group">
                    <label for="exampleInputPassword1">Gender</label>
                    <select class="form-control" name="gender" required>
                        <option>{{ update_data.gender }}</option>
                        <option  value="male">Male</option>
                        <option  value="female">Female</option>
                    </select>
                </div>



            </div>
            <div class="col-md-6">

                <div class="form-group">
                    <label for="dept">Work Type:</label>
                    <select name="work_time" class="form-control" id="wtype">

                        <option>{{ update_data.work_time }}</option>
                        <option value="day">Day</option>
                        <option value="night">Night</option>

                    </select>
                    <!--<input type="text" name="Work_time" class="form-control" id="wtype">-->
                </div>
                <div class="form-group">
                    <label for="des">Designation</label>
                    <select name="designation_id" class="form-control" id="dept" required>
                        {% for designation in desi %}
                            <option value="{{ designation.id }}">{{ designation.name }}</option>
                        {% endfor %}


                    </select>
                    <!--<input type="text" name="designation" class="form-control" id="desi">-->
                </div>


                <div class="form-group">
                    <label for="des">Department</label>
                    <select name="department_id" class="form-control" id="dept" required>

                        {% for department in dept %}
                            <option value="{{ department.id }}">{{ department.name }}</option>
                        {% endfor %}

                    </select>
                    <!--<input type="text" name="designation" class="form-control" id="desi">-->
                </div>


                <div class="form-group">
                    <label for="exampleInputEmail1">Salary</label>
                    <input type="text" name="salary" value="{{ update_data.salary }}" class="form-control" id=""
                           placeholder="Enter salary" required>
                </div>


            </div>

        </div>
        <button class="btn btn-success">Submit</button>
        </div>
    </form>

{% endblock %}